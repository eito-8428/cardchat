<div class="community-content">
    <div class="games">ゲームカテゴリー</div>
      <div class="game-Category">
        <%= link_to "/duelmasters/index" do %>  
          <%= image_tag 'images/duelmasters.png', class:"game-image" %>
          <span>デュエル・マスターズ </span>
        <% end %>

        <%= link_to "/yugiohs/index" do %>
          <%= image_tag 'images/yugioh.png', class:"game-image" %>
           <span>遊戯王 </span>
        <% end %>

        <%= link_to "/pokemons/index" do %>
          <%= image_tag 'images/Pokemon.png', class:"game-image" %>
          <span>ポケモン </span>
        <% end %>

        <%= link_to "/magics/index" do %>
          <%= image_tag 'images/magic.png', class:"game-image" %>
          <span>マジックギャザリー </span>
        <% end %>
      </div> 
      <% if logged_in? %>
        <div class="new-post">
          <%= link_to "投稿", "/duelmasters/new" ,class: 'btn  btn-white'%>
        </div>
      <% end %>
      <div class ="play-user-vs">対戦プレイヤーを探そう！</div>
　　        <%# 対戦できるユーザー表示ユーザーの情報を載せる %>
      <div class = "post-user-content">
        <% @duelmasters.each do |duelmaster| %>
          <div class = "post-user">
            <%= link_to user_path(duelmaster.user_id) do %>
              <% if duelmaster.user.image? %>
                <%= image_tag duelmaster.user.image.url,class:"icon-image" %>
              <% else %>
                <%=image_tag"default.png",class:"icon-image" %>
              <% end %>
            <% end %>
              <div class="user-post-name">
                <%= duelmaster.user.name%>
              </div>

              <div class="user-post-schedule">
                <%= duelmaster.schedule %>
              </div>

              <div class="user-post-time">
                <%= duelmaster.time %>
              </div>

              <div class="user-post-description">
                <%= duelmaster.description %>
                <% if duelmaster.user == current_user %>
                <%= link_to duelmaster_path(duelmaster), method: :delete ,data: {confirm: "本当にいいですか？"} do %>
                <i class="far fa-trash-alt "></i>
                <% end %>
              </div>
              <% end %>
          </div>
        <% end %>
      </div>
</div>